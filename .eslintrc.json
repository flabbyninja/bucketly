{
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "plugins": ["eslint-plugin-react"],
    "rules" : {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "semi-style": ["error", "last"],
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
        }],
        "jsx-a11y/href-no-hash": "off"
    }
}
